{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["jest", "node", "react"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "tools/**/*",
    "./jest.setup.ts",
    "index.js",
    "jest.config.ts",
    "metro.config.ci.js",
    "metro.config.js"
  ]
}
